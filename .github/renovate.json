{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies"
  ],
  "git-submodules": {
    "enabled": true
  },
  "gitIgnoredAuthors": [
    "github@gls-ecl.com"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gradle"
      ],
      "addLabels": [
        "java"
      ]
    },
    {
      "matchManagers": [
        "gradle-wrapper"
      ],
      "addLabels": [
        "gradle"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "github_actions"
      ]
    },
    {
      "matchManagers": [
        "git-submodules"
      ],
      "addLabels": [
        "git_submodules"
      ]
    },
    {
      "matchSourceUrlPrefixes": ["https://github.com/JetBrains/kotlin"],
      "groupName": "Kotlin & Compose compiler"
    },
    {
      "matchPackageNames": ["androidx.compose.compiler:compiler"],
      "groupName": "Kotlin & Compose compiler"
    }
  ]
}
