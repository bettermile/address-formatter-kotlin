{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "maven"
      ],
      "addLabels": [
        "java"
      ]
    },
    {
      "matchDatasources": [
        "gradle-version"
      ],
      "addLabels": [
        "gradle"
      ]
    },
    {
      "matchDatasources": [
        "github-tags"
      ],
      "addLabels": [
        "github_actions"
      ]
    },
    {
      "matchSourceUrlPrefixes": ["https://github.com/JetBrains/kotlin"],
      "groupName": "Kotlin & Compose compiler"
    },
    {
      "matchPackageNames": ["androidx.compose.compiler:compiler"],
      "groupName": "Kotlin & Compose compiler"
    }
  ]
}
